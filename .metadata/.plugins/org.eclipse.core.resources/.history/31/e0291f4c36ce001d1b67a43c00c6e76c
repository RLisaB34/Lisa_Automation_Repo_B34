package lichu.usa.javapractice;

public class Zakat_Calc {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		float income = 18.2;     //salary in millions
		int spon = 16;			  //endorsements 
		int bonus = 25;           // bonuses
		float asset = 91.56;	  //cash at home + bank accounts + assets
		float gold = 1.65;      //gold 
		float silver = 0.56;     //silver 
		float total = income+spon+bonus+asset+gold+silver; //total assets
		float liability = 20.58;                           //liabilities 
		float z = 0.025; 
		
		float z2 = total-liability; 					   //total zakatable income 
		float zakat = z2*z; 								   //total zakat due 
		
		String TotalAsset = "Mo Salah's total assets = "; 
		String Liab = "His total liabilities = "; 
		String Zakat = "Mo Salah's Zakat for 2023 = "; 
		
		System.out.println(TotalAsset);
		
		
		
	}

}
